<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/framelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:visibility="visible"
    android:background="#cccc">


    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="#ffffff"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Bienvenido"
        />

    <Switch
        android:id="@+id/switchServicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empezar a aprender  "
        android:layout_marginLeft="50dp"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#ffffff"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Nivel de dificultad"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/buttonEasy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="#08A81C"
            android:text="Easy"
            />
        <Button
            android:id="@+id/buttonMedium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="#F3650C"
            android:text="Medium"

            />
        <Button
            android:id="@+id/buttonHard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="#FF0000"
            android:text="Hard"
            />
    </LinearLayout>

    <Button
        android:id="@+id/buttonEntrenar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:text="Entrenar"
        />


</LinearLayout>